        <!--</ToolBar> -->
        <TabControl Grid.Row="2" Margin="288,6,12,12" Grid.RowSpan="3">
            <TabItem Header="Status">
                <!-- <ScrollViewer> -->
                <RichTextBox Padding="5" IsReadOnly="True" FontFamily="Consolas" Name="textBlockLogContainer" VerticalScrollBarVisibility="Auto" Height="299">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </RichTextBox.Resources>
                </RichTextBox>
                <!-- </ScrollViewer> -->
            </TabItem>
        </TabControl>
        <StatusBar Grid.Row="5" Background="#eee">
            <StatusBarItem>
                <ProgressBar Name="progressStatus" Width="100" Height="16" IsEnabled="False"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="textBlockStatusContainer" 
                           Text="This is a status caption. Use MainWindow.SetStatus(String p) to update this value." />
            </StatusBarItem>
        </StatusBar>

        <Label Content="Tool:" Margin="40,33,675,27" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="79" ></Label>
        <ComboBox Height="35" HorizontalAlignment="Left" Margin="99,33,0,0" ToolTip="Choose the product" Name="Product" VerticalAlignment="Top" Width="175" SelectionChanged="ProductType_SelectionChanged" DisplayMemberPath="Key" VerticalContentAlignment="Center" Grid.Row="2" Text="Choose the product" SelectedIndex="1" IsReadOnly="True" IsSynchronizedWithCurrentItem="True" />

        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="Import Type:&#xD;&#xA;" RenderTransformOrigin="-6.248,2.111" Margin="15,81,695,76" Grid.Row="2" Width="84" Height="35" Grid.RowSpan="2" ></Label>
        <ComboBox Grid.Row="2" Height="35" HorizontalAlignment="Left" Margin="99,81,0,0" ToolTip="Choose the type of import" Name="Parser" VerticalAlignment="Top" Width="175" SelectionChanged="Parser_SelectionChanged" VerticalContentAlignment="Center" DisplayMemberPath="Value" IsSynchronizedWithCurrentItem="True" Text="Choose the type of import" SelectedIndex="-1" IsReadOnly="True" Grid.RowSpan="2"/>
       
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="Seq Gen Method:" Margin="0,36,694,26" Grid.Row="3" Height="35" ></Label>
        <ComboBox Grid.Row="3" Height="35" HorizontalAlignment="Left" Margin="99,36,0,0" ToolTip="Choose the method" Name="SequenceGeneratorType" VerticalAlignment="Top" Width="175" SelectionChanged="SequenceGeneratorType_SelectionChanged" VerticalContentAlignment="Center" DisplayMemberPath="Value" IsReadOnly="True" IsSynchronizedWithCurrentItem="True" SelectedIndex="-1" />

        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="Export Type:" Margin="15,98,704,35" Grid.Row="4" />
        <ComboBox Grid.Row="4" Height="35" HorizontalAlignment="Left" Margin="99,98,0,0" ToolTip= "choose the file generation method" Name="GenerateFile" VerticalAlignment="Top" Width="175"  SelectionChanged="GenerateFile_SelectionChanged" VerticalContentAlignment="Center" DisplayMemberPath="Value" SelectedIndex="-1" IsReadOnly="True" IsSynchronizedWithCurrentItem="True"/>

        <Button Name="buttonLoadData" Content="Load File" Click="buttonLoadData_Click" ToolTip="Load file to be parsed..." Grid.Row="3" Height="35" HorizontalAlignment="Left" Margin="99,87,0,0" VerticalAlignment="Top" Width="175" HorizontalContentAlignment="Left" Grid.RowSpan="2" />

        <Button Content="Generate Test Cases" Name="buttonGenerateTestCases" ToolTip="Generate test cases from loaded test data."
                    Click="buttonGenerateTestCases_Click" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="99,43,0,0" Grid.Row="4" Height="35" Width="175" HorizontalContentAlignment="Left" />
    </Grid>
</Window>
